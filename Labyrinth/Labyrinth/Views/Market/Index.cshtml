@model IEnumerable<Labyrinth.Models.Sell>

@{
    ViewBag.Title = "Index";
}

<h2>Market</h2>


<table class="table table-hover">
    <tr class="trcolor">
        <th>
            Item Name
        </th>
        <th>
            Icon
        </th>
        <th>
            Seller
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>Buy</th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("buyItem", "Market", FormMethod.Post))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                <img src="@Url.Action("getImage", "Market", new { id = item.Item.Id } )" height="30px" width="30px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    @Html.ActionLink("Buy Item", "buyItem", new { id = item.Id })
 
            </td>
        </tr>
            }
        }

</table>
<p>
    <input type="button" class="btn btn-primary btn-md" value="Sell items" onclick="@("window.location.href='" + @Url.Action("sellItems", "Market") + "'");" />

    @*Html.ActionLink("Sell Items", "sellItems")*@
</p>